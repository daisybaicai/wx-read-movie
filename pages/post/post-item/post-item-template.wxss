.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author {
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}

.post-author-img {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20px;
  vertical-align: middle;
}

.post-title {
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.post-image {
  margin-bottom: 20rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-icon {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-number {
  margin-right: 20rpx;
  vertical-align: middle;
}
